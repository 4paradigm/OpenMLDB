                                        uses an invalid URL to the MIT license -->
                                        <exclude>licenses/LICENSE-mssql-jdbc-*.txt</exclude>
                                    </excludes>
                                </fileset>
                            </filesets>
                        </configuration>
                    </plugin>
                </plugins>
